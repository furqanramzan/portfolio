---
import Button from './Button.astro';
import Icon from './Icon.astro';
import Link from './Link.astro';
import { type LinkKey, links } from '@/utils/constants';

export interface Props {
  back: LinkKey;
  forward: LinkKey;
}

const { back, forward } = Astro.props;
---

<div class="mt-5 flex flex-col items-center justify-center gap-4 sm:flex-row">
  <Link href={links[back].href} class="flex">
    <Button class="rounded-sm px-7 py-2">
      <Icon icon="material-symbols:arrow-left-rounded" />
      {links[back].name}
    </Button>
  </Link>
  <Link href={links[forward].href} class="flex">
    <Button class="rounded-sm px-7 py-2">
      {links[forward].name}
      <Icon icon="material-symbols:arrow-right-rounded" />
    </Button>
  </Link>
</div>
