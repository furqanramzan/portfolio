---
import Button from './Button.astro';
import Icon from './Icon.astro';

interface Props {
  cta: {
    title: string;
    description: string;
    button: string;
  };
  link: string;
}

const { cta, link } = Astro.props;
---

<div
  class="flex flex-col items-center gap-5 bg-gray-200 p-3 py-10 dark:bg-gray-800"
>
  <Icon class="!h-14 !w-14" icon="pepicons-pop:stars" />
  <div class="flex flex-col items-center gap-1">
    <h3 class="text-xl font-semibold">{cta.title}</h3>
    <p class="text-gray-500">{cta.description}</p>
  </div>
  <a href={link} class="flex" target="_blank">
    <Button class="gap-2 px-5 py-2">
      <Icon icon="iconamoon:send-duotone" />
      {cta.button}
    </Button>
  </a>
</div>
