---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'button'>;

const props = Astro.props;
const { class: classes, ...attrs } = props;
---

<button
  {...attrs}
  class={`bg-primary-800 hover:bg-primary-600 focus:ring-primary-300 dark:bg-primary-800 dark:hover:bg-primary-600 dark:focus:ring-primary-100 inline-flex items-center rounded-xl text-center text-sm text-white focus:ring-4 font-medium ${classes}`}
>
  <slot />
</button>
