---
import type { CollectionEntry } from 'astro:content';
import Badge from './Badge.astro';
import Icon from './Icon.astro';
import Link from './Link.astro';
import SkillName from './SkillName.astro';

interface Props {
  skill: CollectionEntry<'skill'>;
}

const { skill } = Astro.props;
---

<Link fetch="hover" href={`/skill/${skill.slug}`} class="flex">
  <Badge class="hover:bg-gray-50 dark:hover:bg-gray-900">
    <SkillName skill={skill} />
    <Icon class="!h-4 !w-4" icon="material-symbols:arrow-right-rounded" />
  </Badge>
</Link>
