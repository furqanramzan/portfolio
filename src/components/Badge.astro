---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'i'>;

const props = Astro.props;
const { ...attrs } = props;
---

<span
  class={`flex items-center dark:bg-gray-700 dark:text-gray-400 bg-gray-300 text-gray-700  px-2.5 py-0.5 rounded text-md hover:bg-gray-50 dark:hover:bg-gray-900 ${
    attrs.class || ''
  }`}
  {...attrs}
>
  <slot />
</span>
