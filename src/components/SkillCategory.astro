---
import { type CollectionEntry, getEntries } from 'astro:content';
import Skill from './Skill.astro';
import { sortByOrder } from '@/utils/sort';

interface Props {
  skillCategory: CollectionEntry<'skillcategory'>;
}

const { skillCategory } = Astro.props;
const skills = sortByOrder(await getEntries(skillCategory.data.skills));
---

<div class="flex flex-col gap-2 bg-gray-200 p-5 dark:bg-gray-800">
  <h3 class="text-xl font-semibold">{skillCategory.data.title}</h3>
  <div class="flex flex-wrap gap-2">
    {skills.map((x) => <Skill skill={x} />)}
  </div>
</div>
