const gTag = `
<script src="https://www.googletagmanager.com/gtag/js?id=${gTagId}"></script><script> window.dataLayer = window.dataLayer || []; function gtag() { dataLayer.push(arguments); } gtag("js", new Date()); gtag("config", "${gTagId}"); </script>`;
