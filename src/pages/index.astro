---
import { getEntry } from 'astro:content';
import Default from '@/layouts/Default.astro';
import AboutMe from '@/components/about/AboutMe.astro';
import Button from '@/components/Button.astro';
import Icon from '@/components/Icon.astro';
import Link from '@/components/Link.astro';

const content = await getEntry('page', 'home');
---

<Default
  active="home"
  title={content.data.title}
  description={content.data.description}
>
  <div class="mx-auto mt-10 max-w-screen-md">
    <div class="flex flex-col items-center gap-10">
      <AboutMe center={true} width={300} height={300}>
        <Link href="/about" class="flex">
          <Button type="button" class="px-8 py-2">
            {content.data.explore}
            <Icon icon="material-symbols:arrow-right-rounded" />
          </Button>
        </Link>
      </AboutMe>
    </div>
  </div>
</Default>
