---
import { generateSocialImage } from 'astro-social-images';
import { SEO } from 'astro-seo';
import { ViewTransitions } from 'astro:transitions';
import Header from '@/components/Header.astro';
import GoogleTag from '@/components/GoogleTag.astro';
import {
  type LinkKey,
  color,
  name,
  siteUrl,
  twitterUsername,
} from '@/utils/constants';
import ProgressBar from '@/components/ProgressBar.astro';
import PWA from '@/components/PWA.astro';

export interface Props {
  title: string;
  description: string;
  active: LinkKey;
}

const { title, description, active } = Astro.props;

const imageResult = generateSocialImage({
  backgroundColor: color,
  images: [
    {
      url: 'public/socials/logo.svg',
      attributes: { top: 475, left: 800 },
    },
  ],
  texts: [
    {
      content: name,
      attributes: { x: '55', y: '105', 'font-size': '70px', fill: '#ffffff' },
    },
    {
      content: title,
      attributes: { x: '50', y: '325', 'font-size': '40px', fill: '#ffffff' },
    },
  ],
});
const { href: ogImage } = new URL(imageResult.url, siteUrl);
---

<html lang="en">
  <head>
    <SEO
      titleTemplate={`%s | ${name}`}
      titleDefault={name}
      title={title}
      description={description}
      twitter={{
        creator: twitterUsername,
        card: 'summary',
        description,
        image: ogImage,
      }}
      openGraph={{
        basic: {
          title,
          type: 'A type.',
          image: ogImage,
        },
      }}
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <PWA />
    <GoogleTag />
  </head>
  <body
    class="scroo bg-gray-50 text-black scrollbar-thin scrollbar-track-gray-50 scrollbar-thumb-gray-900 dark:bg-gray-900 dark:text-white dark:scrollbar-track-gray-900 dark:scrollbar-thumb-gray-50"
  >
    <ProgressBar />
    <div
      class="mx-auto flex max-w-screen-2xl flex-col px-2 py-5 sm:px-5 2xl:px-0"
    >
      <Header active={active} />
      <slot />
    </div>
  </body>
</html>
